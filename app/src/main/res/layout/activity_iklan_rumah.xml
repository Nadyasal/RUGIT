<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".penjual.iklanRumah">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:backgroundTint="@color/brown"
                    android:id="@+id/back"/>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:text="iklan"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:padding="15dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7pt"
            android:backgroundTint="@color/white">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:hint="Judul Rumah"
                android:textColor="@color/white"
                android:textSize="7pt"
                android:fontFamily="@font/poppins"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kecamatan"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerKecamatan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:fontFamily="@font/poppins"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginTop="5dp"
            android:background="@drawable/editspin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelurahan"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"/>
        <Spinner
            android:id="@+id/spinnerKelurahan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:fontFamily="@font/poppins"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"

            android:background="@drawable/editspin"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="Detail Alamat "
                android:textColor="@color/white"
                android:textSize="7pt" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">

            <EditText
                android:id="@+id/deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deskripsi Rumah"
                android:textColor="@color/white"
                android:textSize="7pt"
                android:fontFamily="@font/poppins"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textSize="16dp"
                android:textColor="@color/white"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white">

                <EditText
                    android:id="@+id/harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="7pt"
                    android:hint="Harap Mengisi Dengan Angka"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Gambar"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"/>

        <ImageButton
            android:layout_width="match_parent"
            android:src="@drawable/up"
            android:layout_marginTop="5dp"
            android:id="@+id/imgButton"
            android:background="@drawable/editbox"
            android:padding="5dp"
            android:layout_height="200dp"/>


        <Button
            android:id="@+id/iklan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_rounded"
            android:text="iklan"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>
</RelativeLayout>
</ScrollView>